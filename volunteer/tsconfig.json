{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,                 
    "checkJs": false, 
    "module": "esnext", 
    "forceConsistentCasingInFileNames": true,   
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",                       
    "**/*.jsx", 
    ".expo/types/**/*.ts",
    "expo-env.d.ts", 
    "app/index.jsx", 
    "app/_layout.jsx"
  ]
}
